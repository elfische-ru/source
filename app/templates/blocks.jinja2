
{% macro main_info(lang) %}
<div class="block main_info">
    <div class="content-wrapper">
        <dl>
            <dt class="version"><a href="/{{ lang }}/about">{% trans %}О проекте{% endtrans %}</a></dt>

            <dt class="lang">{% trans %}Язык:{% endtrans %}</dt>
            <dd class="lang">
                <ul>
                    <li{% if lang == 'ru' %} class="active"{% endif %}><a href="/ru">ру</a></li>
                    <li{% if lang == 'de' %} class="active"{% endif %}><a href="/de">de</a></li>
                </ul>
            </dd>
        </dl>
    </div>
</div>
{% endmacro %}

{% macro event() %}
<div class="block event vevent">
    <div class="header-wrapper">
        <div class="cover-wrapper">
            <img class="cover" src="{{ static_url }}/images/image-01.jpg" alt="Бисер" />
            <h1 class="summary">{% trans %}Бисер{% endtrans %}</h1>
        </div>
        <h2><span>{% trans %}Онлайн-квартирник Вячеслава Иванцова (Эльфище){% endtrans %}</span></h2>
    </div>
    <div class="content-wrapper">
        <div class="main-event section">
            <table>
                <tbody class="datatime">
                    <tr><td class="label">{% trans %}Дата{% endtrans %}</td><td class="value">{% trans %}26.10.2013, суббота{% endtrans %}</td></tr>
                    <tr><td class="label">{% trans %}Время начала{% endtrans %}</td><td class="value"><time datetime="2013-10-26T17:00+01:00" class="dtstart">17:00</time> (UTC+1){% trans %}<p class="clarify">московское время: 19:00</p>{% endtrans %}</td></tr>
                </tbody>
                <tbody class="other-event">
                    <tr><td class="label">{% trans %}Место проведения{% endtrans %}</td><td class="value">{% trans %}Берлин, Германия{% endtrans %}</td>
                    <tr><td class="label">{% trans %}Трансляция{% endtrans %}</td><td class="value"><a href="http://www.elfische.ru" class="url">www.elfische.ru</a></td></tr></tr>
                </tbody>
            </table>
        </div>

        <div class="sozial-links section">
            <h2>{% trans %}Социальные сети{% endtrans %}</h2>
            <table>
                <tbody>
                    <tr><td><a href="http://vk.com/club8370671">{% trans %}Вконтакте{% endtrans %}</a></td></tr>
                    <tr><td><a href="https://www.facebook.com/events/204514133048460/">Facebook</a></td></tr>
                    <tr><td><a href="http://odnoklassniki.ru/event/2300163806">{% trans %}Одноклассники{% endtrans %}</a></td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endmacro %}

{% macro user_info() %}
<div class="block user_info">
    <div class="content-wrapper"></div>
</div>
{% endmacro %}

{% macro media() %}
<div class="block media">
    <div class="audio-wrapper">
        <audio src="http://stream0.radiostyle.ru:8000/elfische-t-01" preload="none" controls>{% trans start_link='<a href="http://ru.wikipedia.org/wiki/%D0%A1%D1%80%D0%B0%D0%B2%D0%BD%D0%B5%D0%BD%D0%B8%D0%B5_%D0%B1%D1%80%D0%B0%D1%83%D0%B7%D0%B5%D1%80%D0%BE%D0%B2_(HTML5)">', end_link='</a>'%}Ваш браузер не поддерживает {{ start_link }}HTML5 audio{{ end_link }}!{% endtrans %}
        </audio>
    </div>
</div>
{% endmacro %}

{% macro chat() %}
<div class="block chat">
    <div class="chat-hidden">{% trans %}Скрытые сообщения{% endtrans %}</div>
    <div class="content-wrapper"></div>
    <div class="input-box">
        <input type="text" placeholder="{% trans %}Написать сообщение..{% endtrans %}" />
        <button class="sent"></button>
    </div>
</div>
{% endmacro %}
